RUN if [ "${INSTALL_RABBITMQ}" = "true" ]; then DEBIAN_FRONTEND=noninteractive apt-get -y install rabbitmq-server ;else echo "NOT INSTALLING REDIS, set INSTALL_RABBITMQ=true in .env to install "; fi
RUN if [ "${INSTALL_REDIS}" = "true" ]; then DEBIAN_FRONTEND=noninteractive  apt-get -y install redis-server redis-sentinel redis-tools ;else echo "NOT INSTALLING REDIS, set INSTALL_REDIS=true in .env to install "; fi


