RUN if [ "${INSTALL_MARIADB}" = "true" ]; then DEBIAN_FRONTEND=noninteractive  apt-get -y install mariadb-server mariadb-client;else echo "NOT INSTALLING MYSQL(mariadb), set INSTALL_MARIADB=true in .env to install ";echo VALUE IS ;echo "${INSTALL_MARIADB}"; fi
