#FROM raumfisch/october
FROM php:7.2-apache
RUN /bin/ln -sf /usr/share/zoneinfo/Europe/Berlin /etc/localtime
# install the PHP extensions we need
RUN echo -e "deb http://deb.debian.org/debian/ buster main contrib non-free\ndeb-src http://deb.debian.org/debian/ buster main contrib non-free\ndeb http://security.debian.org/debian-security buster/updates main contrib non-free\n""deb-src http://security.debian.org/debian-security buster/updates main contrib non-free" > /etc/apt/sources.list 
RUN apt-get update &&  apt-get dist-upgrade -y && apt-get install -y php7.2-ldap vim git-core libzip-dev zip libsqlite3-dev libpq-dev libmcrypt-dev libpng-dev libjpeg-dev libz-dev libmemcached-dev libphp-predis nano curl && rm -rf /var/lib/apt/lists/* \
# installing zlib RUN mkdir -p /usr/src/zlib
WORKDIR /usr/src/zlib
RUN curl -fsSL 'https://zlib.net/zlib-1.2.11.tar.gz' -o zlib.tar.gz \
    && tar zxvf zlib.tar.gz \
    && cd zlib-1.2.11 \
    && ./configure && make -j4 && make install
# installing libzip RUN mkdir -p /usr/src/libzip
WORKDIR /usr/src/libzip
RUN curl -fsSL 'https://nih.at/libzip/libzip-1.2.0.tar.gz' -o libzip.tar.gz \
    && tar zxvf libzip.tar.gz \
    && cd libzip-1.2.0 \
    && ./configure && make -j4 && make install
WORKDIR /usr/src/php
RUN pecl channel-update pecl.php.net
RUN pecl install mcrypt-1.0.1 && docker-php-ext-enable mcrypt
RUN docker-php-ext-configure gd --with-png-dir=/usr --with-jpeg-dir=/usr \
	&& docker-php-ext-configure zip  --with-libzip \
        && docker-php-ext-install -j 4  gd mysqli zip mbstring pdo pdo_mysql pdo_sqlite pdo_pgsql json \
	&& pecl install memcached redis \
	&& docker-php-ext-enable  memcached redis
# set recommended PHP.ini settings
# see https://secure.php.net/manual/en/opcache.installation.php
RUN { \
		echo 'opcache.memory_consumption=128'; \
		echo 'opcache.interned_strings_buffer=8'; \
		echo 'opcache.max_accelerated_files=4000'; \
		echo 'opcache.revalidate_freq=60'; \
		echo 'opcache.fast_shutdown=1'; \
		echo 'opcache.enable_cli=1'; \
        } | tee -a /etc/php/7.2/apache2/conf.d/mcrypt.ini  /etc/php/7.2/cli/conf.d/mcrypt.ini /etc/php/7.2/mods-available/mcrypt.ini > /dev/null

RUN a2enmod rewrite expires remoteip

RUN /bin/bash -c "date -u +%Y-%m-%d_%H.%M |tee -a /etc/container-build-time"
RUN /bin/bash -c "test -f /etc/apt/apt.conf.d/10-proxy && rm /etc/apt/apt.conf.d/10-proxy;true"
WORKDIR /var/www
VOLUME /var/www/html

RUN curl -sS https://getcomposer.org/installer | php \
        && mv composer.phar /usr/local/bin/composer
RUN apt-get purge -y gcc cpp build-essential && apt-get -y autoremove

RUN apt-get update && apt-get install -y unzip 
RUN composer global require offline/oc-bootstrapper

CMD ["apache2-foreground"]
RUN apt-get update
RUN apt-get -y dist-upgrade
RUN a2enmod ssl && a2ensite default-ssl && a2dismod mpm_event mpm_worker && a2enmod mpm_prefork
RUN   apt-get clean && \
      rm /var/lib/apt/lists/*_*

RUN openssl req -x509 -nodes -days 3650 -newkey rsa:2048 -keyout /etc/ssl/private/ssl-cert-snakeoil.key -out /etc/ssl/certs/ssl-cert-snakeoil.pem -subj "/C=AT/ST=Vienna/L=Vienna/O=Security/OU=Development/CN=www.hno.org"

EXPOSE 443

